{
	"root": true,
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"ignorePatterns": [
		"**/dist/*"
	],
	"env": {
		"jest": true
	},
	"rules": {
		"@typescript-eslint/no-unused-vars": 0,
		"@typescript-eslint/consistent-type-definitions": [
			"warn",
			"interface"
		]
	},
	"extends": [
		"neon/common",
		"neon/node",
		"neon/typescript",
		"neon/prettier"
	]
}