{
	"name": "time-parser",
	"version": "1.0.0",
	"description": "Parses human readable times to numbers",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build:clean": "del-cli dist",
		"build:check": "tsc --noEmit",
		"build:esm": "swc ./lib --out-dir ./dist",
		"build": "npm run build:clean && npm run build:check && npm run build:esm",
		"lint": "prettier --check . && eslint src --ext ts",
		"format": "prettier --write . && eslint src --ext ts --fix",
		"fmt": "npm run format",
		"start": "node --enable-source-maps dist/index.js",
		"start:dev": "npm run build && npm run dev",
		"dev": "node --enable-source-maps dist/index.js",
		"test": "npm run build && mocha --recursive dist/__test__/*.test.js"
	},
	"author": "JPBM135 <jpedrobm0@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.7.14",
		"codecov": "^3.8.3",
		"cpy-cli": "^4.2.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.23.0",
		"eslint-config-neon": "^0.1.13",
		"mocha": "^10.0.0",
		"prettier": "^2.7.1",
		"typescript": "^4.8.2"
	}
}
